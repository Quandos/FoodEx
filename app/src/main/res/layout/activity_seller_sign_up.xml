<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SellerSignUpActivity">


    <TextView
    android:id="@+id/seller_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Information"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fstoreLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seller_information"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp">


        <EditText
            android:id="@+id/storen_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store name"/>
    </android.support.design.widget.TextInputLayout>



<android.support.design.widget.TextInputLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/fstore_idLayout"
    app:layout_constraintTop_toBottomOf="@id/fstoreLayout"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/fstore_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Store Id"/>

</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/addressLayout"
        app:layout_constraintTop_toBottomOf="@id/fstore_idLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"/>

        </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_numberLayout"
        app:layout_constraintTop_toBottomOf="@id/addressLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        >

        <EditText
            android:id="@+id/contactn_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"/>

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/storehoursLayout"
            app:layout_constraintTop_toBottomOf="@id/contact_numberLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp">


            <EditText
                android:id="@+id/hstore_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Store hours"/>


            </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cityLayout"
        app:layout_constraintTop_toBottomOf="@id/storehoursLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/city_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_margin="10dp"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/country_array"
            android:layout_margin="10dp">

        </Spinner>

        </LinearLayout>



        </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/terms"
        android:text="Terms and Conditions"
        android:textColor="#0000ff"
        app:layout_constraintTop_toBottomOf="@id/cityLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/submit_btn1"
        android:enabled="false"
    android:text="Submit"
    app:layout_constraintTop_toBottomOf="@id/terms"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_btn"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/submit_btn1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"/>





</android.support.constraint.ConstraintLayout>